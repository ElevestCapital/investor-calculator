---
const data = Astro.props.data;
function accordion() {
    return {
        open: true,
        toggle() {
            this.open = !this.open;
        },
    };
}
---

<div class="accordion" x-data={accordion}>
    <div @click="toggle">
        <div class="accordion-toggle">
            {Astro.props.title}
            <svg
                :style="{'transform': open ? 'rotate(90deg)' : 'rotate(0deg)'}"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    d="M8.59 7.41L13.17 12L8.59 16.59L10 18L16 12L10 6L8.59 7.41Z"
                    fill="currentColor"></path>
            </svg>
        </div>
    </div>
    <div class="accordion-content" :class="{'open': open}">
        <div class="table-header">
            <div>Year</div>
            <div>Monthly Cashflow</div>
            <div>Annual Cashflow</div>
            <div>Equity Investment Balance</div>
        </div>
        <template x-for="(year, i) in multiFamilySelectedYears">
            <div class="table-row">
                <div x-text="'Year ' + i"></div>
                <div x-text="'$ ' + numberToPrice(year.cashFlow)"></div>
                <div x-text="'$ ' + numberToPrice(year.anualCashflow)"></div>
                <div x-text="'$ ' + numberToPrice(year.endingInvestedBalance)">
                </div>
            </div>
        </template>
    </div>
</div>

<style>
    .accordion {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        border: 1px solid var(--color-teal-dark);
        border-radius: 1rem;
        padding: 12px;
        height: fit-content;
        background-color: var(--color-neutral-light);
        z-index: 3;
        transition-duration: 0.1;
        transition: var(--transition);
        width: 100%;
    }

    .accordion:hover {
        border: 1px solid var(--color-orange-dark);
    }

    .accordion:hover .accordion-toggle {
        color: var(--color-orange-dark);
    }

    .accordion-toggle {
        transition: var(--transition);
        cursor: pointer;
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        font-weight: bold;
    }

    .accordion-content {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        overflow: hidden;
        height: 0;
        transition: var(--transition);
    }

    .open {
        transition: var(--transition);
        height: fit-content;
    }

    .table-header,
    .table-row {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        gap: 1rem;
        padding: 0.2rem;
    }

    .table-row {
        text-wrap: nowrap;
    }

    .table-header {
        font-weight: bold;
        border-bottom: 1px solid var(--color-teal-dark);
    }

    .table-row {
        transition: var(--transition);
        border-radius: 0.5rem;
        cursor: pointer;
    }

    .table-row:hover {
        color: var(--color-neutral-light);
        background-color: var(--color-orange-dark);
    }
</style>
