---
function accordion(){
  return {
    open: false,
    toggle(){
      this.open = !this.open
    }
  }
}
---

<div class="accordion" x-data={accordion}>
  <div @click="toggle">
    <div class="accordion-toggle">
      {Astro.props.title}
      <svg :style="{'transform': open ? 'rotate(90deg)' : 'rotate(0deg)'}" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M8.59 7.41L13.17 12L8.59 16.59L10 18L16 12L10 6L8.59 7.41Z" fill="currentColor"/></svg>
    </div>
    <h2 x-text="'$ '+ parseFloat(total).toFixed(2)"></h2>
  </div>
  <div x-show="open">
    <template x-for="(year, i) in selectedYears">
      <div class="accordion-item">
        <span x-text="'Year ' + year.number"></span>
        <div>
        $ <span x-text="parseFloat(year.totalInvested).toFixed(2)"></span>
        </div>
      </div>
    </template>
  </div>
</div>

<style>
  
.accordion {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  border: 1px solid var(--teal-dark);
  border-radius: 1rem;
  padding: 1rem;
  height: fit-content;
  background-color: var(--neutral-light);
}

.accordion-toggle {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.accordion-pricing {
  font-size: 2rem;
}

.accordion-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.5rem;
}

.accordion-content {
  display: flex;
  flex-direction: column;
  gap: 0.8rem;
}

.accordion-item {
  display: flex;
  justify-content: space-between;
}


</style>